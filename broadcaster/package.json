{
  "name": "iron-curtain-broadcaster",
  "version": "0.2.0",
  "description": "AI-powered live esports commentary for IronCurtain Red Alert matches",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:demo": "tsx src/index.ts --style esports --demo",
    "dev:skippy": "tsx src/index.ts --style skippy_trash_talk --demo",
    "dev:documentary": "tsx src/index.ts --style documentary --demo",
    "dev:war": "tsx src/index.ts --style war_correspondent --demo",
    "dev:no-tts": "tsx src/index.ts --style esports --demo --no-tts",
    "check": "tsc --noEmit",
    "clean": "rm -rf dist .audio-cache"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "express": "^4.18.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  }
}
